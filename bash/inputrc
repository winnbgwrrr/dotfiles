# .inputrc

set editing-mode vi
set show-mode-in-prompt on
set vi-cmd-mode-string \1\e[38;5;118m\2<\1\e[0m\2
set vi-ins-mode-string \1\e[38;5;118m\2>\1\e[0m\2
set show-all-if-ambiguous on
set completion-ignore-case on
set keymap vi-insert

"\e[A": history-search-backward
"\e[B": history-search-forward
"\C-q": 'tmux kill-server\n'
"\C-h": '_home;_reset_prompt\n'
